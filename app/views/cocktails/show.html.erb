<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <h2>Ingredients:</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Doses</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.description %> of <%= dose.ingredient.name %></td>

              <td><%= link_to 'Delete dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
      <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>


