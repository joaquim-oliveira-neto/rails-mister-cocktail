<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <h2>Ingredients:</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Doses</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.description %> of <%= dose.ingredient.name %></td>

              <td class="text-right"><%= link_to 'Delete dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <h3>Adding a new dose to <%= @cocktail.name %></h3>

      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :description, label: "Amount" %>
          <%= f.association :ingredient%>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <%= link_to 'Back', cocktails_path, class: "btn btn-default" %>
      </div>
    </div>

  </div>


</div>




