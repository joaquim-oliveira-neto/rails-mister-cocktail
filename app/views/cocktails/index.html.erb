<h1>Cocktails</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ingredients</th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td>
          <ul class="list-unstyled">
            <% cocktail.doses.each do |dose| %>
            <li> <%= dose.description %> of <%= dose.ingredient.name %> </li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', cocktail %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
