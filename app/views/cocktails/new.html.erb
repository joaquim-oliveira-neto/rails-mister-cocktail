<h1>New Cocktail</h1>

  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div>
      <%= f.button :submit, class: "form-actions btn btn-primary" %>
    </div>
  <% end %>

<%= link_to 'Back', cocktails_path %>
